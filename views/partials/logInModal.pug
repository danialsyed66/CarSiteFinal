<div class="modal fade" id="signInModal" tabindex="-1" role="dialog" aria-labelledby="modelTitleId" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title font-weight-bold">Sign In</h1>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
            </div>
            <div class="modal-body">
                form(action="/api/users/login",method="post")
                    .form-group
                        label(for="email" class="font-weight-bold") Email
                        input#email(type="text", class="form-control", name="email", placeholder="Enter your email" value="admin@admin.com")
                    .form-group
                        label(for="password" class="font-weight-bold") Password
                        input#password(type="password", class="form-control", name="password", placeholder="Enter your password" value="admin123")
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    input(type="submit" id="signInSave" class="btn btn-primary" value="Sign In")
            </div>
        </div>
    </div>
</div>


